# Apache Configuration f체r Assistara Website
# Netcup Webhosting

# PHP Version (falls konfigurierbar)
# AddHandler application/x-httpd-php74 .php
# php_value memory_limit 256M
# php_value upload_max_filesize 10M
# php_value post_max_size 10M

# UTF-8 Encoding
AddDefaultCharset UTF-8

# Security Headers
<IfModule mod_headers.c>
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME-Type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Clickjacking Protection
    Header set X-Frame-Options "SAMEORIGIN"
    
    # HTTPS Enforcement (Strict-Transport-Security)
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# HTTPS Redirect (erzwingt SSL)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Redirect .html URLs to clean URLs
    RewriteCond %{THE_REQUEST} ^GET\ /[^?\s]+\.html
    RewriteRule ^(.*)\.html$ /$1 [R=301,L,NE]
    
    # Clean URLs - Case Insensitive Mapping zu tats채chlichen Dateien
    # Hauptseiten
    RewriteRule ^kontakt$ kontakt.html [NC,L]
    RewriteRule ^leistungen$ leistungen.html [NC,L]
    RewriteRule ^ueber-uns$ ueber-uns.html [NC,L]
    RewriteRule ^impressum$ impressum.html [NC,L]
    RewriteRule ^datenschutz$ datenschutz.html [NC,L]
    
    # Verschachtelte Leistungen-URLs
    RewriteRule ^leistungen/persoenliche$ persoenliche.html [NC,L]
    RewriteRule ^leistungen/schul-individual-begleitung$ schul-individual-begleitung.html [NC,L]
    RewriteRule ^leistungen/personliches-budget$ personliches-budget.html [NC,L]
    
    # Fallback: alte direkte URLs weiterhin unterst체tzen (redirect zu neuer Struktur)
    RewriteRule ^persoenliche$ /Leistungen/Persoenliche [R=301,NC,L]
    RewriteRule ^schul-individual-begleitung$ /Leistungen/Schul-Individual-Begleitung [R=301,NC,L]
    RewriteRule ^personliches-budget$ /Leistungen/Personliches-Budget [R=301,NC,L]
    
    # Fallback: Wenn existierende Datei/Verzeichnis, dann direkt
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
</IfModule>

# API Directory Protection
<IfModule mod_authz_core.c>
    # Direkten Zugriff auf config.php verbieten
    <Files "config.php">
        Require all denied
    </Files>
    
    # Logs-Verzeichnis sch체tzen
    <DirectoryMatch "^.*/logs/">
        Require all denied
    </DirectoryMatch>
</IfModule>

# Disable Directory Listing
Options -Indexes

# Custom Error Pages (optional)
ErrorDocument 404 /index.html
ErrorDocument 403 /index.html

# File Upload Protection
<FilesMatch "\.(php|php3|php4|php5|phtml)$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
</FilesMatch>

# Protect sensitive files
<FilesMatch "(^\.htaccess|^\.git|composer\.json|composer\.lock|\.md$)">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>

# Gzip Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>
